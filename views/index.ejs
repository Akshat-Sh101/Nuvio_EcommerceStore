<%- include('./partials/header') %>

<div class="w-full min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex flex-col md:flex-row px-4 md:px-20 overflow-hidden">
    <% if(error && error.length > 0) { %>
        <div id="error-message" class="absolute top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 opacity-0">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
    <% } %>
    <% if(success && success.length > 0) { %>
        <div id="error-message" class="absolute top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 opacity-0">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
    <% } %>
    <div class="w-full md:w-1/2 flex items-center justify-center py-10 md:py-0">
        <div class="w-full max-w-md px-4 md:px-8 register-form opacity-1">
            <h3 class="text-4xl mb-2">welcome to <span class="text-blue-500 font-semibold">Nuvio</span></h3>
            <h4 class="text-2xl mb-5 text-gray-600">create your account</h4>
            <form id="register-form" autocomplete="off" action="/users/register" method="post" class="space-y-4">
                <div class="relative">
                    <input
                        class="bg-white block w-full px-3 py-2 border-2 rounded-md transition-all duration-300 ease-in-out focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        type="text" placeholder="Full Name" name="fullname" required>
                    <span class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                    </span>
                </div>
                <div class="relative">
                    <input
                        class="bg-white block w-full px-3 py-2 border-2 rounded-md transition-all duration-300 ease-in-out focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        type="email" placeholder="Email" name="email" required>
                    <span class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path></svg>
                    </span>
                </div>
                <div class="relative">
                    <input
                        class="bg-white block w-full px-3 py-2 border-2 rounded-md transition-all duration-300 ease-in-out focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        type="password" placeholder="Password" name="password" required>
                    <span class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                    </span>
                </div>
                <button class="w-full px-5 rounded-full py-3 bg-blue-500 text-white transition-all duration-300 ease-in-out hover:bg-blue-600 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50" type="submit">
                    Create My Account
                </button>
            </form>
        </div>
    </div>
    
    <div class="w-full md:w-1/2 flex items-center justify-center py-10 md:py-0">
        <div class="w-full max-w-md px-4 md:px-8 login-form opacity-1">
            <h4 class="text-2xl capitalize mb-5 text-gray-600">login your account</h4>
            <form id="login-form" autocomplete="off" action="/users/login" method="post" class="space-y-4">
                <div class="relative">
                    <input
                        class="bg-white block w-full px-3 py-2 border-2 rounded-md transition-all duration-300 ease-in-out focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        type="email" placeholder="Email" name="email" required>
                    <span class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path></svg>
                    </span>
                </div>
                <div class="relative">
                    <input
                        class="bg-white block w-full px-3 py-2 border-2 rounded-md transition-all duration-300 ease-in-out focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        type="password" placeholder="Password" name="password" required>
                    <span class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                    </span>
                </div>
                <button class="w-full px-5 rounded-full py-3 bg-blue-500 text-white transition-all duration-300 ease-in-out hover:bg-blue-600 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50" type="submit">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>


<script>
document.addEventListener('DOMContentLoaded', (event) => {
    // Entrance animations
    gsap.from(".register-form", {duration: 1, x: -50, opacity: 0, ease: "power3.out"});
    gsap.from(".login-form", {duration: 1, x: 50, opacity: 0, ease: "power3.out", delay: 0.3});
    
    if (document.getElementById('error-message')) {
        gsap.to("#error-message", {duration: 0.5, opacity: 1, y: 10, ease: "power2.out"});
        gsap.to("#error-message", {duration: 0.5, opacity: 0, y: -10, delay: 5, ease: "power2.in"});
    }

    // Hover effects for inputs
    const inputs = document.querySelectorAll('input');
    inputs.forEach(input => {
        input.addEventListener('focus', () => {
            gsap.to(input, {duration: 0.3, scale: 1.05, ease: "power2.out"});
        });
        input.addEventListener('blur', () => {
            gsap.to(input, {duration: 0.3, scale: 1, ease: "power2.out"});
        });
    });

    // Button hover effects
    const buttons = document.querySelectorAll('button');
    buttons.forEach(button => {
        button.addEventListener('mouseenter', () => {
            gsap.to(button, {duration: 0.3, scale: 1.05, ease: "power2.out"});
        });
        button.addEventListener('mouseleave', () => {
            gsap.to(button, {duration: 0.3, scale: 1, ease: "power2.out"});
        });
    });

    // Form submission animations
    const registerForm = document.getElementById('register-form');
    const loginForm = document.getElementById('login-form');

    registerForm.addEventListener('submit', (e) => {
        e.preventDefault();
        gsap.to(".register-form", {duration: 0.5, scale: 0.95, opacity: 0, ease: "power2.in", onComplete: () => {
            registerForm.submit();
        }});
    });

    loginForm.addEventListener('submit', (e) => {
        e.preventDefault();
        gsap.to(".login-form", {duration: 0.5, scale: 0.95, opacity: 0, ease: "power2.in", onComplete: () => {
            loginForm.submit();
        }});
    });
});
</script>

